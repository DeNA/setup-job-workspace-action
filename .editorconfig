root = true

[*]
indent_style = space
indent_size = 4

[*.{sh}]
indent_size = 2
end_of_line = lf

[*.{js,mjs,ts}]
indent_size = 2
end_of_line = lf

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 150

[*.{json,ecrc}]
indent_size = 2
max_line_length = 180

[{Makefile,GNUmakefile}]
indent_style = tab
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 2
